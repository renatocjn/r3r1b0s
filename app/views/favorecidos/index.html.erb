<div class="row">
  <div class="col">
    <h3>Lista de Favorecidos</h3>
  </div>
  <div class="col-4 d-flex justify-content-center">
    <%= paginate @favorecidos %>
  </div>
</div>

<div class="modal fade" id="filter-form" tabindex="-1" role="dialog" aria-labelledby="filter-form-long-title" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Filtros</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for :favorecido, url: favorecidos_path, method: :get do |f| %>
          <div class="row">
            <div class="col">
              <%= f.input :nome, label: false, placeholder: "Nome do favorecido" %>
            </div>
            <div class="col-auto">
              <%= button_tag type: :submit, class: "btn btn-primary control-bttn" do %>
                <%= fa_icon(:search) %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= simple_form_for :favorecido, url: favorecidos_path, method: :get do |f| %>
          <div class="row">
            <div class="col">
              <%= f.input :cpf_cnpj, label: false, placeholder: "CPF/CNPJ" %>
            </div>
            <div class="col-auto">
              <%= button_tag type: :submit, class: "btn btn-primary control-bttn" do %>
                <%= fa_icon(:search) %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= simple_form_for :favorecido, url: favorecidos_path, method: :get do |f| %>
          <div class="row">
            <div class="col">
              <%= f.input :rg, label: false, placeholder: "RG" %>
            </div>
            <div class="col-auto">
              <%= button_tag type: :submit, class: "btn btn-primary control-bttn" do %>
                <%= fa_icon(:search) %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= link_to "Remover Filtros", favorecidos_path, class: "btn btn-danger btn-block"%>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" class="col">Nome do favorecido</th>
          <th scope="col" class="col-auto">RG</th>
          <th scope="col" class="cpf-cnpj-col">CPF/CNPJ</th>
          <th scope="col" class="col-auto"></th>
          <th scope="col" class="col-auto"><%= link_to fa_icon("filter"), "", class: "btn btn-primary control-bttn", "data-toggle" => "modal", "data-target" => "#filter-form" %></th>
          <th scope="col" class="col-auto"><%= link_to fa_icon("plus-circle"), new_favorecido_path, class: "btn btn-primary control-bttn" %> </th>
        </tr>
      </thead>

      <tbody>
        <% @favorecidos.each do |favorecido| %>
          <tr scope="row">
            <td class="col"><%= favorecido.nome %></td>
            <td class="cpf-cnpj-col"><%= favorecido.rg %></td>
            <td class="cpf-cnpj-col"><%= favorecido.cpf_cnpj %></td>
            <td class="col-auto"><%= link_to fa_icon("info-circle"), favorecido, class: "btn btn-info control-bttn" %></td>
            <td class="col-auto"><%= link_to fa_icon(:pencil), edit_favorecido_path(favorecido), class: "btn btn-warning control-bttn" %></td>
            <td class="col-auto"><%= link_to fa_icon(:trash), favorecido, method: :delete, data: { confirm: 'Você tem certeza? Todos os recibos deste favorecido serão apagados!' }, class: "btn btn-danger control-bttn" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
