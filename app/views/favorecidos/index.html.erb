<div class="row">
  <div class="col">
    <h3>Lista de Favorecidos</h3>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">RG</th>
          <th scope="col">CPF/CNPJ</th>
          <th scope="col" colspan="2"></th>
          <th scope="col"><%= link_to fa_icon("plus-circle"), new_favorecido_path, class: "btn btn-primary control-bttn" %> </th>
        </tr>
      </thead>

      <tbody>
        <% @favorecidos.each do |favorecido| %>
          <tr scope="row">
            <td><%= favorecido.nome %></td>
            <td><%= favorecido.rg %></td>
            <td><%= favorecido.cpf_cnpj %></td>
            <td><%= link_to fa_icon("info-circle"), favorecido, class: "btn btn-info control-bttn" %></td>
            <td><%= link_to fa_icon(:pencil), edit_favorecido_path(favorecido), class: "btn btn-warning control-bttn" %></td>
            <td><%= link_to fa_icon(:trash), favorecido, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-danger control-bttn" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
